@using Clud.Grpc
@using Microsoft.Extensions.Options
@inject IOptions<CludOptions> CludOptions

<div class="flex flex-wrap justify-between items-center text-2xl py-4">
    <a href="/" class="flex-1 flex items-center text-gray-600 hover:text-teal-600">
        <img src="/logo.svg" alt="Logo." class="h-6 mr-2" />
        <pre class="tracking-tight">clud</pre>
    </a>

    <a href="@Application.IngressUrl" class="group flex justify-center truncate">
        <span class="font-semibold group-hover:text-teal-600">@Application.Name</span>
        <span class="text-gray-600 group-hover:text-teal-600 truncate">.@CludOptions.Value.BaseHostname</span>
    </a>

    <div class="flex-1"></div>
</div>

@code {
    [Parameter]
    public ApplicationResponse Application { get; set; }
}